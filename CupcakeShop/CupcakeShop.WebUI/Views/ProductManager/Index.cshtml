@model IEnumerable<CupcakeShop.Core.Models.Product>

@*@{
        ViewBag.Title = "Index";
    }*@
@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@

<div class="pages-text">
    <div class="pages-title">
        <h2>Product List Admin View</h2>
    </div>
    <div class="contacts-container">
        <div class="text contacts-text product-list-admin-view">
            <div class="button-container">
                <div class="checkout-container back-admin-container">
                    <a href="@Url.Action("Index", "Admin")" class="btn btn-checkout">Back to Admin Page</a>
                </div>
                <div class="checkout-container add-product-container">
                    <a href="@Url.Action("Create", "ProductManager")" class="btn btn-checkout">Create New Product</a>
                </div>
            </div>
            <div style="padding-bottom:15px;">
                <form asp-controller="Movies" asp-action="Index">
                    <p>
                        Search Products:
                    </p>
                    <input type="text" name="SearchString" />
                    <input type="submit" value="Filter" />
                </form>
            </div>
            <div>
                <table class="table">
                    <tr>
                        <th>
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Category)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img class="img-thumbnail" style="height:50px" src="~/Content/ProductImages/@item.Image" />
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td style="display:flex;">
                                <p>@Html.DisplayFor(modelItem => item.Price)</p><p>&nbsp; Kr</p>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Category)
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "ProductManager", new { Id=item.Id })" class="btn btn-danger btn-edit">Edit</a>
                                @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
                                <a href="@Url.Action("Delete", "ProductManager", new { Id=item.Id })" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>